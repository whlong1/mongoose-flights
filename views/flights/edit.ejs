<%- include('../partials/header.ejs') %>

  <section>
    <h1>Edit a Flight</h1>

    <form class="flight-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">

      <label>Airline:</label>
      <select name="airline">
        <option value="<%= flight.airline%>"><%= flight.airline%></option>
        <option value="American">American</option>
        <option value="Southwest">South West</option>
        <option value="United">United</option>
      </select>

      <span>Airport:</span>
      <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option selected value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>

      <span>Flight Number:</span>
      <input type="number" min="10" max="9999" type="number" name="flightNo" autocomplete="off"
        value="<%= flight.flightNo %>">

      <span>Departure:</span>
      <input required type="datetime-local" name="departs" value="<%= flight.departs.toISOString().slice(0, 16) %>">

      <button style="margin-top: 10px; padding: 5px;" type="submit">Book Flight</button>

    </form>

  </section>

  <%- include('../partials/footer.ejs') %>